rojo = #ec1d23
font-size = 16px;
line-height = 1;
lines-to-show = 2;
::-webkit-input-placeholder /* Chrome/Opera/Safari */
  color: #b4b4b4;

::-moz-placeholder  /* Firefox 19+ */
  color: #b4b4b4;

:-ms-input-placeholder  /* IE 10+ */
  color: #b4b4b4;

:-moz-placeholder  /* Firefox 18- */
  color: #b4b4b4;
*
  box-sizing: border-box
body
  margin 0
  font-size: 16px
  font-family 'Roboto'
  background: #f4f4f4
.header
  display flex
  align-items: center
  padding: 1em 1em;
  position: relative
  min-height: 60px
  width: 100%
  justify-content: center
  background: #2d2727
  box-shadow: 2px 4px 8px 1px #b1b1b1;
  &-logo
    max-height 60px
    position: absolute
    left: 0
    max-width 150px
    margin-left: 2em;    
  &-search
    position relative
    max-width: 610px
    width: 100%
    &-input
      font-family 'Roboto'
      font-size 20px
      margin: 0
      padding: 0 1em
      height: 50px
      width: 100%
      border-radius: .2em
      border: 0
    i
      position: absolute;
      right: .5em;
      top: .5em;
      font-size: 1.5em;
      color: #b4b4b4;
@media screen and (max-width: 1050px)
  .header
    flex-direction: column
    &-logo
      position: relative
      margin: 0 0 1em 0;
    
.blur
  -webkit-filter: blur(5px);
  filter: blur(5px);
.btn
  color white
  font-weight bold
  padding 1em
  border 0
  margin-top 1em
  transition all .3s ease-in-out
  cursor pointer
  &-red
    background rojo
    &:hover
      background #D32F2F
.main-wrap
  display: flex;
  max-width: 100%;
  .titleContainer
    display: flex;
    align-items: center;
    img
      margin-right: 1em;
  h2
    letter-spacing 2px
    color #3d3332
  .col1
    width 80% 
    padding-left:1em;     
  .col2
    width 20%
#heroes
  .heroesComp
    display: flex;
    list-style: none;
    padding: 0;
    align-items: center;
    justify-content: center;
    flex-wrap: wrap;
    li
      a
        padding: 1em;
        display: block;
      &.number
        color: #c5c1c2;
        width: 50px;
        height: 50px;
        text-align: center;
        padding: 0;
        box-shadow: 2px 2px 5px 0px #BDBDBD;
        margin: .5em;
        background: white;
        cursor: pointer;
        transition all .3s ease-in-out
        &:hover
          background: rojo;
          color: white;
          box-shadow: 2px 2px 5px 0px #E0E0E0;
        &.active
          background: white;
          color: black;
          box-shadow: 2px 2px 5px 0px #E0E0E0;
      
  .heroesContainer
    display flex
    flex-wrap: wrap
    justify-content: space-around;
    .hero
      background: white;
      padding: 0 1.5em 3em 1.5em;
      max-width: 430px;
      width: 100%;
      color: #463e3c;
      margin: 1.4em;
      .comics
        h3
          color: #796d6d;
        &-container
          display: flex;
          flex-wrap: wrap;
          align-items: center;
          justify-content: space-between;
          height: 80px;
          overflow-y: auto;
          padding-right: .3em;
          li
            list-style: none;
            .comic
              color: inherit;
              text-decoration: none;
              width: 170px;
              display: inline-block;
              margin: 0 .5em .5em 0;
              transition all .3s ease-in-out
              display: block; /* Fallback for non-webkit */
              display: -webkit-box;
              height: font-size*line-height*lines-to-show; /* Fallback for non-webkit */
              font-size: font-size;
              line-height: line-height;
              -webkit-line-clamp: lines-to-show;
              -webkit-box-orient: vertical;
              overflow: hidden;
              text-overflow: ellipsis;
              &:hover
                color rojo
      &-container
        display: flex;
        position: relative;
        min-height: 180px;
        .hero-image
          position: absolute;
          width: 200px;
          height: 200px;
          border-radius: 50%;
          overflow: hidden;
          left: -3em;
          top: -1em;
          box-shadow: 2px 1px 5px 1px #afa8ab;
          img
            position: absolute;
            height: 100%;
        &-description
          width: 100%;
          margin-left: 10em;
          position: relative;
          top: -1.8em;
          min-height: 316px;
          .title
            margin: .5em 0;
          .description
            margin: 0;
  .modalContainer
    position fixed
    top 0
    left 0
    width 100%
    z-index 1
    display flex
    align-items: center;
    justify-content: center;
    height: 100%;
    background: rgba(49, 46, 46, 0.79);
    .modal
      max-width 550px
      position relative
      z-index 1
      background white
      width 100%
      box-shadow: 0 8px 13px 0px rgba(43, 43, 43, 0.53)
      .closeModal
        position: absolute;
        right: .8em;
        top: .8em;
        width: 18px;
        cursor pointer
        img
          width: 100%;
      .buttons
        display: flex;
        flex-wrap: wrap;
        a
          background: gainsboro;
          width: 100%;
          text-decoration: none;
          display: inline-block;
          text-align: center;
          font-size: 13.3333px;
        .btn
          width 50%;
          padding: 1em;
          color #3d3333
          text-transform uppercase
          font-weight bold
          font-family: 'Roboto'

          &-favoritos
            background: #eceeee;
          img
            display: inline-block;
            vertical-align: middle;
            max-width: 30px;
      .content
        display flex
        padding .5em 1em 0 1em
        .col
          width: 60%;
          &:first-child
            width: 40%;
            min-width: 200px;
          &:last-child
            margin: 0 1em;
            .descx
              font-weight: lighter;
              font-size: 13px;
              max-height: 250px;
              overflow-y: auto;
          .title
            text-transform uppercase
          .image
            max-width: 200px;
            position relative
            min-height: 300px;
            margin 0 auto
            margin-top: 1.2em;
            overflow hidden
            img
              position absolute
              height 100%
.favoritos-container
  padding: 2em;
  .favorito
    position: relative;
    .thrash
      max-width: 25px;
      position: absolute;
      right: -.5em;
      top: -.5em;
      cursor: pointer
      img
        width: 100%;
    .comic-container
      .comic-image
        img
          width: 100%;
    .comic-name
      font-weight: bold
      text-align: center
@media screen and (max-width: 980px)
  .main-wrap
    flex-wrap: wrap;
    flex-direction: column;
    align-items: center;
    .col1
      width: 100%
      padding: 1em
    .col2
      width: 80%;


